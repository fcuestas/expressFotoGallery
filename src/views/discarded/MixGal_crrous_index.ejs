<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Imágenes</title>
    <!-- Agrega los estilos de Bootstrap -->
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Estilo para las miniaturas */
      .thumbnail {
        width: 150px;
        height: 150px;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Galería de Imágenes</h1>
      <div class="row">
        <% imagePaths.forEach((imagePath, index) => { %>
        <div class="col-4">
          <img
            class="thumbnail"
            src="fotos/<%= imagePath %>"
            alt="Imagen <%= index + 1 %>"
          />
        </div>
        <% }); %>
      </div>
    </div>
<br><hr>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% imagePaths.forEach((imagePath, index) => { %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" <% if (index === 0) { %>class="active"<% } %>></li>
          <% }); %>
        </ol>
        <div class="carousel-inner">
          <% imagePaths.forEach((imagePath, index) => { %>
            <div class="carousel-item <% if (index === 0) { %>active<% } %>">
              <img class="d-block w-100" src="fotos/<%= imagePath %>" alt="Slide <%= index + 1 %>">
            </div>
          <% }); %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    <!-- Agrega los scripts de Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
